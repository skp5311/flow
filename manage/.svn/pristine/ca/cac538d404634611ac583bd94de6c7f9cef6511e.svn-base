<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd" default-autowire="byName">

	<context:property-placeholder location="classpath:conf/db.properties" ignore-unresolvable="true"/>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${dataSource.db.jdbc.driver}"/>
		<property name="url" value="${dataSource.db.jdbc.url}"/>
		<property name="username" value="${dataSource.db.jdbc.username}"/>
		<property name="password" value="${dataSource.db.jdbc.password}"/>
		<property name="initialSize" value="${dataSource.db.jdbc.initialSize}" />
		<property name="maxActive" value="${dataSource.db.jdbc.maxActive}" />
		<property name="minIdle" value="${dataSource.db.jdbc.minIdle}" />
		<property name="maxIdle" value="${dataSource.db.jdbc.maxIdle}" />
		<property name="timeBetweenEvictionRunsMillis" value="60000" />
		<property name="minEvictableIdleTimeMillis" value="180000" />
		<property name="testOnBorrow" value="true" />
		<!--<property name="validationQuery" value="select now()" />-->
		<property name="removeAbandonedTimeout" value="300" />
		<property name="removeAbandoned" value="true" />
	</bean>

	<bean id="dataSourceGreenPlum" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${dataSource.db.jdbc.greenplum.driver}"/>
		<property name="url" value="${dataSource.db.jdbc.greenplum.url}"/>
		<property name="username" value="${dataSource.db.jdbc.greenplum.username}"/>
		<property name="password" value="${dataSource.db.jdbc.greenplum.password}"/>
		<property name="initialSize" value="${dataSource.db.jdbc.greenplum.initialSize}" />
		<property name="maxActive" value="${dataSource.db.jdbc.greenplum.maxActive}" />
		<property name="minIdle" value="${dataSource.db.jdbc.greenplum.minIdle}" />
		<property name="maxIdle" value="${dataSource.db.jdbc.greenplum.maxIdle}" />
		<property name="timeBetweenEvictionRunsMillis" value="60000" />
		<property name="minEvictableIdleTimeMillis" value="180000" />
		<property name="testOnBorrow" value="true" />
		<property name="validationQuery" value="select 1" />
		<property name="removeAbandonedTimeout" value="300" />
		<property name="removeAbandoned" value="true" />
	</bean>
</beans>