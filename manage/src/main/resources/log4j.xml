<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} [%7r] %-5p %c %M:%L - %m%n"/>
        </layout>
    </appender>

    <category name="org.mybatis.spring.SqlSessionUtils">
        <priority value="ERROR" />
        <appender-ref ref="CONSOLE" />
    </category>

    <category name="org.perf4j.TimingLogger">
		<priority value="ERROR" />
		<appender-ref ref="CONSOLE" />
	</category>

    <category name="com.op.flow.manage.util.FreemarkerViewTool" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="freemarker.cache" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.headers" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="freemarker.beans" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.web.servlet.mvc.method.annotation.RequestResponseBodyMethodProcessor" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.jdbc.datasource.DataSourceUtils" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.jdbc.datasource.DataSourceTransactionManager" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.web.servlet.DispatcherServlet" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.web.servlet.resource.ResourceHttpRequestHandler" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.beans.factory.support.DefaultListableBeanFactory" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.mybatis.spring.transaction.SpringManagedTransaction" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.wire" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.impl.conn.PoolingHttpClientConnectionManager" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.springframework.data.redis.core.RedisConnectionUtils" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.impl.execchain.MainClientExec" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.impl.conn.DefaultManagedHttpClientConnection" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <category name="org.apache.http.client.protocol.RequestAddCookies" additivity="true">
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <root>
        <priority value="${log4j.level}"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>